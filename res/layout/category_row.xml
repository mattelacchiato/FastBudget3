<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/context_switcher"
        android:onClick="switchView" >

        <LinearLayout
            android:id="@+id/category_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Category Name"
                tools:ignore="HardcodedText"
                style="@style/headline"
                 />

            <ProgressBar
                android:id="@+id/category_fill"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-6dp"
                android:indeterminate="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="0dp"
                android:progress="23" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/category_spent"
                    style="@style/amount_text_view"
                    android:gravity="left"
                    android:text="-100,23€"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/category_budget"
                    style="@style/amount_text_view"
                    android:gravity="right"
                    android:text="-122,30€"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/context_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/button_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/delete_category"
                android:onClick="deleteCategory"
                android:src="@drawable/ic_delete" />

            <ImageButton
                android:id="@+id/button_list"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/expenditures"
                android:onClick="openExpenditureList"
                android:src="@drawable/ic_list" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/horizontal_divider" />

    <ImageButton
        android:id="@+id/button_add_expenditure"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/add_category"
        android:onClick="addExpenditure"
        android:src="@drawable/ic_add" />

</LinearLayout>