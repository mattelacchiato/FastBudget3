<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/context_switcher"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="switchView"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/category_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                style="@style/headline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Category Name"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/category_fill"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-6dp"
                android:indeterminate="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="0dp"
                android:progress="23" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/category_spent"
                    style="@style/amount_text_view"
                    android:gravity="left"
                    android:text="-100,23€"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/category_budget"
                    style="@style/amount_text_view"
                    android:gravity="right"
                    android:text="-122,30€"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/horizontal_divider" />

        <ImageButton
            android:id="@+id/button_add_expenditure"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/add_category"
            android:onClick="addExpenditure"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/context_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_context"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/button_edit"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_edit"
            android:onClick="editCategory"
            android:text="@string/edit_category" />

        <Button
            android:id="@+id/button_delete"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_delete"
            android:onClick="deleteCategory"
            android:text="@string/delete_category" />

        <Button
            android:id="@+id/button_list"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_list"
            android:onClick="openExpenditureList"
            android:text="@string/expenditures" />
    </LinearLayout>

</LinearLayout>