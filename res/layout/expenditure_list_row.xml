<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/context_switcher"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="switchView"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_field"
            style="@style/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20.03.13"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/amount"
            style="@style/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="20,23â‚¬"
            android:textIsSelectable="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/context_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_context"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/button_edit"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_edit"
            android:onClick="editCategory"
            android:text="@string/edit_category" />

        <Button
            android:id="@+id/button_delete"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_delete"
            android:onClick="deleteCategory"
            android:text="@string/delete_category" />

        <Button
            android:id="@+id/button_list"
            style="@style/contextButton"
            android:drawableTop="@drawable/ic_list"
            android:onClick="openExpenditureList"
            android:text="@string/expenditures" />
    </LinearLayout>

</LinearLayout>